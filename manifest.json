{
	"name": "Tab Switcher",
	"manifest_version": 2,
	"version": "1.0.0",
	"description": "Fast switching between tabs",
	"permissions": [
		"tabs"
	],
	"background": {
		"scripts": ["background.js"],
		"persistent": true
	},
	"commands": {
		"open-tab-man": {
			"suggested_key": {
				"default": "Ctrl+M",
				"mac": "Command+M"
			},
			"description": "Focus the tab switcher."
		}
	},
	"icons": {
		"16": "images/logo16.png",
		"64": "images/logo64.png",
		"128": "images/logo128.png"
	}
}
